{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": false,
    "module": "commonJs",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": ["es2018", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@test/*": ["./*"],
      "@core/*": ["../src/core/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["."],
  "exclude": []
}
